<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@drawable/dropdown_background"
    android:gravity="right"
    android:orientation="vertical"
    android:visibility="gone" >

    <ImageView
        android:id="@+id/trafficView"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="right"
        android:layout_marginTop="42dp"
        android:src="@drawable/satview_button"
        android:onClick="clickTrafficView" />
    
    <ImageView
        android:id="@+id/satView"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:src="@drawable/traffic_button"
        android:onClick="clickSatView" />
    



    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        android:onClick="hideOverlay"
        android:src="@drawable/close_button" />

</LinearLayout>