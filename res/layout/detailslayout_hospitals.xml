                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:text="Type:"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/descDetailsType"
                    android:layout_width="176dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="" />
                
                <TextView
                    android:id="@+id/descSpec"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:text="Specialities:"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/descDetailsSpecialities"
                    android:layout_width="176dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="" />
                
                <TextView
                    android:id="@+id/descDetailsSpecialities2"
                    android:layout_width="176dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="" />
                
                <TextView
                    android:id="@+id/descDetailsSpecialities3"
