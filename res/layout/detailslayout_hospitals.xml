                    android:layout_height="wrap_content"
                    android:text="" />
                
                <TextView
                    android:id="@+id/descDetailsSpecialities6"
                    android:layout_width="176dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="" />
                
                <TextView
                    android:id="@+id/descDetailsSpecialities7"
                    android:layout_width="176dp"
